<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUITutorial.StackPageDemo"
             Title="StackPageDemo">
    <!--By default vertical orientation otherwize Orientation="Horizontal"-->
    <StackLayout Spacing="10">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Start" BackgroundColor="Aqua"/>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="End" BackgroundColor="Blue"/>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="FillAndExpand" BackgroundColor="Chartreuse"/>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="FillAndExpand" 
            HorizontalOptions="Center" BackgroundColor="Purple"/>
    </StackLayout>
</ContentPage>