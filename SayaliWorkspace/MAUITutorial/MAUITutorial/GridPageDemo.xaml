<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUITutorial.GridPageDemo"
             Title="GridPageDemo">
    <Grid>
        <Grid.RowDefinitions>
            <!-- Height can be in px eg. 10, 20... or it can be auto .... it can be in percent like .2* -->
            <RowDefinition Height="*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!--<Button Text="Click First"  Grid.Row="0" Grid.RowSpan="2" HeightRequest="300"/>-->
        <Button Text="Click First"  Grid.Row="0"/>
        <!--<Button Text="Click Second" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"/>-->
        <Button Text="Click Second" Grid.Row="1" Grid.Column="1"/>
    </Grid>
</ContentPage>