<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppPractice.InputControlsDemoPage"
             Title="InputControlsDemoPage">
    <StackLayout>
        <CheckBox IsChecked="True"/>
        <Slider 
            x:Name="Slider1"
            Minimum="0"
            Maximum="10"
            MinimumTrackColor="Green"
            MaximumTrackColor="Red"
            ThumbColor="Cyan"
            ValueChanged="Slider1_ValueChanged"
            />
        <Label x:Name="ResultSlider"/>
        <Stepper x:Name="Stepper1"
                 ValueChanged="Stepper1_ValueChanged"
                 Minimum="0"
                 Maximum="10"
                 Increment="1"
                 />
        <Switch IsToggled="True" />
        <DatePicker />
        <TimePicker />
        <Entry x:Name="UserText" Placeholder="Enter Text" PlaceholderColor="White"
               IsPassword="True"
               Keyboard="Numeric"
               TextChanged="UserText_TextChanged"
               Completed="UserText_Completed"
               />
        <Editor AutoSize="TextChanges" />
    </StackLayout>
</ContentPage>