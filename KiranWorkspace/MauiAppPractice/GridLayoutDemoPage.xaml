<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppPractice.GridLayoutDemoPage"
             Title="GridLayoutDemoPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
            </Grid.RowDefinitions>
        <Grid.ColumnDefinitions >
            <ColumnDefinition />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!--<Grid RowDefinitions="0.4*,0.6*" ColumnDefinitions="200,*"/>-->
        <Button Text="Click First" Grid.Row="0" HeightRequest="300"/>
        <Button Text="Click Second" Grid.Row="1" Grid.Column="1"/>

    </Grid>
</ContentPage>